<% layout("./layout/boilerplate.ejs") -%>
<script>
   const mapToken = "<%= process.env.API_MAPBOX_TOKEN %>";
   const listing = <%- JSON.stringify(listing) %>;
  
</script>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h4><%= listing.title %></h4>
  </div>

  <div class="card col-6 offset-3 p-0 listing-card">
    <!-- Listing Image -->
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <br>
    <div class="card-body">
      <!-- Listing Information -->
      <p>Owned By : <i><%= listing.owner.username %></i></p>
      <p><%= listing.description %></p>
      <p><strong>Price:</strong> â‚¹<%= listing.price %></p>
      <p><strong>Location:</strong> <%= listing.location %></p>
      <p><strong>Country:</strong> <%= listing.country %></p>

      <!-- Action Buttons -->
      <div class="mt-4">
        <div class="row justify-content-center gap-2">
          <!-- Edit Button -->
          <div class="col-12 col-sm-5 col-md-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-success w-100">
              Edit
            </a>
          </div>

          <!-- Delete Button -->
          <div class="col-12 col-sm-5 col-md-4">
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button type="submit" class="btn btn-danger w-100">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
<br>

      <!-- Review Section -->
        <% if (currUser) { %>
          <div class="review-section mt-5">
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing._id %>/reviews" class="needs-validation" method="POST" novalidate>
              
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>

              <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea id="comment" name="review[comment]" class="form-control" required></textarea>
                <div class="invalid-tooltip">
                  Please enter your comment to review.
                </div>
              </div>

              <button class="btn btn-outline-danger" type="submit">Add Review</button>
            </form>
          </div>
        <% } %>

        <hr>
    <% if(listing.reviews.length > 0) { %>
        <h4>All Reviews</h4>
        <br>
        <div class="row">
          <% for(let reviews of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-2">
              <div class="card-body">
                <h5 class="card-title">@<%= reviews.author.username %></h5> <!-- You might want to change this to the reviewer's name -->
                <p class="starability-result card-text" data-rating="<%= reviews.rating%>"></p>
                <p class="card-text"><%= reviews.comment %></p>
              
                <form action="/listings/<%= listing._id %>/reviews/<%= reviews._id %>?_method=DELETE"
                       method="POST">
                 <button class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
              </div>
          <% } %>
        </div>
        <% } %>
      
      </div>
      
    </div>
    <div class="card col-6 offset-3">
          <h3 class="mt-3 mb-3">Where You Will Be...</h3>
          <div id="map"></div>
      </div>
  </div>
</div>
<script src="/js/map.js"></script>